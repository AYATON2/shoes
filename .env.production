APP_NAME="StepUp Footwear"
APP_ENV=production
APP_KEY=base64:your-app-key-here
APP_DEBUG=false
APP_URL=https://yourdomain.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration with Connection Pooling
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=edoy_db
DB_USERNAME=root
DB_PASSWORD=your-secure-password
DB_PERSISTENT=true
DB_POOL_MIN=10
DB_POOL_MAX=100
DB_POOL_CONNECT_TIMEOUT=10.0
DB_POOL_WAIT_TIMEOUT=3.0
DB_POOL_HEARTBEAT=30
DB_POOL_MAX_IDLE_TIME=60.0

# Redis for Caching, Sessions, and Queues (High Performance)
BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_SESSION_DB=3

# Redis Connection Pooling
REDIS_PERSISTENT=1
REDIS_TIMEOUT=2.5
REDIS_READ_TIMEOUT=2.5
REDIS_RETRY_INTERVAL=100

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Response Caching (for better performance)
RESPONSE_CACHE_ENABLED=true
RESPONSE_CACHE_LIFETIME=3600

# Rate Limiting (prevents abuse)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_API_PER_MINUTE=120

# OPcache Settings (Uncomment in php.ini)
# opcache.enable=1
# opcache.memory_consumption=256
# opcache.interned_strings_buffer=16
# opcache.max_accelerated_files=20000
# opcache.validate_timestamps=0
# opcache.revalidate_freq=0
# opcache.fast_shutdown=1

# HTTP/3 Configuration
HTTP3_ENABLED=true
